						<b>End Time: </b> <%= @contest.end_time.strftime("%Y-%m-%d %k:%M:%S %Z") %>
						<br>
						<%= link_to "Add Problem", "/admin/problem/#{params[:id]}/new" %>
						<hr>
						
						<table>
							<tr>
							<th>Problem Name</th>
							</tr>
							<% @problem.each do |p| %>
							<tr>
							<td><%= link_to p.title, "/admin/problem/#{p.id}/view" %></td>
							</tr>
							<% end %>
						</table>
					</div>
